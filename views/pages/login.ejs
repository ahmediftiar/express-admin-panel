<div class="page-login">
    <h3>Login</h3>
    <form action="/login" method="POST">
        <label>
            Username
            <input type="text" name="username" required />
        </label>
        <label>
            Password
            <input type="password" name="password" required />
        </label>
        <button type="submit">Submit</button>
    </form>
</div>
